#include <stdio.h>

int main() {
    double num1, num2;
    char op;

    printf("Enter a number: ");
    scanf("%lf", &num1);

    printf("Enter another number: ");
    scanf("%lf", &num2);

    printf("Enter an operator (+, -, *, /): ");
    scanf(" %c", &op);

    if (op == '+') {
        printf("%.1lf + %.1lf = %.1lf\n", num1, num2, num1 + num2);
    } else if (op == '-') {
        printf("%.1lf - %.1lf = %.1lf\n", num1, num2, num1 - num2);
    } else if (op == '*') {
        printf("%.1lf * %.1lf = %.1lf\n", num1, num2, num1 * num2);
    } else if (op == '/') {
        printf("%.1lf / %.1lf = %.1lf\n", num1, num2, num1 / num2);
    } else {
        printf("Invalid operator\n");
    }

    return 0;
}
